<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.ednovak.icfworkout.Tracker">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:id="@+id/mainView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <net.ednovak.icfworkout.Exercise
                xmlns:custom="http://schemas.android.com/apk/res/net.ednovak.icfworkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:exer_text="Squats 5 x 5" />

            <net.ednovak.icfworkout.Exercise
                xmlns:custom="http://schemas.android.com/apk/res/net.ednovak.icfworkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:exer_text="Bench 5 x 5" />

            <net.ednovak.icfworkout.Exercise
                xmlns:custom="http://schemas.android.com/apk/res/net.ednovak.icfworkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:exer_text="Bent Over Row 5 x 5" />

            <net.ednovak.icfworkout.Exercise
                xmlns:custom="http://schemas.android.com/apk/res/net.ednovak.icfworkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:exer_text="Barbell Shrugs 3 x 8" />

            <net.ednovak.icfworkout.Exercise
                xmlns:custom="http://schemas.android.com/apk/res/net.ednovak.icfworkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:exer_text="Tricep Ext 3 x 8" />

            <net.ednovak.icfworkout.Exercise
                xmlns:custom="http://schemas.android.com/apk/res/net.ednovak.icfworkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:exer_text="Straight Bar Curls 3 x 8" />

            <net.ednovak.icfworkout.Exercise
                xmlns:custom="http://schemas.android.com/apk/res/net.ednovak.icfworkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:exer_text="Hyper-Ext 3 x 10" />

            <net.ednovak.icfworkout.Exercise
                xmlns:custom="http://schemas.android.com/apk/res/net.ednovak.icfworkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:exer_text="Cable Crunches 3 x 10" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
