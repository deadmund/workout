<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.ednovak.workout" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/man_lifting_weight_dpi"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Tracker"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_tracker" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Help"
            android:label="@string/title_activity_help" >
        </activity>
        <activity
            android:name=".WeightChart"
            android:label="@string/title_activity_weight_chart" >
        </activity>
    </application>

</manifest>
